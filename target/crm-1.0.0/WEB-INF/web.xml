<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.lee.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.lee.crm.web.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.lee.crm.web.listener.SysInitListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.lee.crm.settings.web.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/settings/user/login.do</url-pattern>
        <url-pattern>/settings/user/getUserList.do</url-pattern>
        <url-pattern>/settings/user/getCurrentUser.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ActivityController</servlet-name>
        <servlet-class>com.lee.crm.workbench.web.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivityController</servlet-name>
        <url-pattern>/workbench/activity/getUserList.do</url-pattern>
        <url-pattern>/workbench/activity/save.do</url-pattern>
        <url-pattern>/workbench/activity/pageList.do</url-pattern>
        <url-pattern>/workbench/activity/delete.do</url-pattern>
        <url-pattern>/workbench/activity/getActivity.do</url-pattern>
        <url-pattern>/workbench/activity/update.do</url-pattern>
        <url-pattern>/workbench/activity/detail.do</url-pattern>
        <url-pattern>/workbench/activity/getRemark.do</url-pattern>
        <url-pattern>/workbench/activity/editRemark.do</url-pattern>
        <url-pattern>/workbench/activity/removeRemark.do</url-pattern>
        <url-pattern>/workbench/activity/saveRemark.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClueController</servlet-name>
        <servlet-class>com.lee.crm.workbench.web.controller.ClueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClueController</servlet-name>
        <url-pattern>/workbench/clue/getUserList.do</url-pattern>
        <url-pattern>/workbench/clue/saveClue.do</url-pattern>
        <url-pattern>/workbench/clue/pageList.do</url-pattern>
        <url-pattern>/workbench/clue/getClue.do</url-pattern>
        <url-pattern>/workbench/clue/updateClue.do</url-pattern>
        <url-pattern>/workbench/clue/remove.do</url-pattern>
        <url-pattern>/workbench/clue/showDetail.do</url-pattern>
        <url-pattern>/workbench/clue/saveRemark.do</url-pattern>
        <url-pattern>/workbench/clue/editRemark.do</url-pattern>
        <url-pattern>/workbench/clue/removeRemark.do</url-pattern>
        <url-pattern>/workbench/clue/getActList.do</url-pattern>
        <url-pattern>/workbench/clue/relate.do</url-pattern>
        <url-pattern>/workbench/clue/showAct.do</url-pattern>
        <url-pattern>/workbench/clue/removeRelation.do</url-pattern>
        <url-pattern>/workbench/clue/convert.do</url-pattern>
        <url-pattern>/workbench/clue/getBoundAct.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>com.lee.crm.workbench.web.controller.CustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/workbench/customer/pageList.do</url-pattern>
        <url-pattern>/workbench/customer/saveCustomer.do</url-pattern>
        <url-pattern>/workbench/customer/getCustomer.do</url-pattern>
        <url-pattern>/workbench/customer/updateCustomer.do</url-pattern>
        <url-pattern>/workbench/customer/removeCustomers.do</url-pattern>
        <url-pattern>/workbench/customer/getCustomerDetail.do</url-pattern>
        <url-pattern>/workbench/customer/saveRemark.do</url-pattern>
        <url-pattern>/workbench/customer/listRemarks.do</url-pattern>
        <url-pattern>/workbench/customer/updateRemark.do</url-pattern>
        <url-pattern>/workbench/customer/removeRemark.do</url-pattern>
        <url-pattern>/workbench/customer/listTrans.do</url-pattern>
        <url-pattern>/workbench/customer/showContacts.do</url-pattern>
    </servlet-mapping>
</web-app>